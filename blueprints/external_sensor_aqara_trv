blueprint:
  name: External temperature sensor for Aqara TRV
  description: Synchronise external temperature sensor with Aqara TRV
  domain: automation

  input:
    temp_sensor:
      name: Lights to synchronise
      required: true
      selector:
        entity:
          domain: sensor
          multiple: true
    climate:
      name: Aqara TRV
      required: true
      selector:
        entity:
          domain: climate
          multiple: false

mode: single
max_exceeded: silent

triggers:
  - trigger: state
    entity_id: !input temp_sensor
    
conditions: []
actions:
  - action: number.set_value
    metadata: {}
    data:
      value: "{{trigger.to_state}}"
    target:
      entity_id: !input climate
